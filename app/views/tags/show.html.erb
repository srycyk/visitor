
<%= render 'heading', model: @tag %>

<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd>
    <%= @tag.name %>
  </dd>

  <dt>Title
  <dd>
    <%= @tag.title %>
  </dd>

  <dt>
    <%= pluralize @tag.branch.size, 'parent' %>
  </dt>
  <dd>
    <%= @tag.branch * ' -> ' %>
  </dd>


  <dt>
    <%= pluralize @tag.tags_count, 'child' %>
  </dt>
  <dd>
    <%= @tag.tags.to_a * ', ' %>
  </dd>

  <dt>Number of bookmarks</dt>
  <dd>
    <%= @tag.bookmarks_count || 0 %>
  </dd>

  <dt>Age</dt>
  <dd><%= time_ago_in_words @tag.created_at %></dd>


  <dt>Created</dt>
  <dd>
    <%= show_time @tag.created_at %>
  </dd>

  <dt>Updated</dt>
  <dd>
    <%= show_time @tag.updated_at %>
  </dd>

  <dt>Tree</dt>
  <dd>
    <pre><%= @tag.to_tree(indent: ' ' * 4) %></pre>
  </dd>
</dl>

<%= render 'links', tag: @tag %>
