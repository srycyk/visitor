
<% set_large_form! %>

<%= form_for tag, form_atts do |f| %>
  <%= render 'error_messages', model: tag %>

  <%= text_field_group f, :name, mandatory: true,
                                 field_cols: 4,
                                 autofocus: true %>

  <%= text_field_group f, :title %>

  <%= select_field_group f, :tag_id, select_option_tags,
                                     blank: true,
                                     cols: 6,
                                     locals: { title: 'Parent tag' } %>

  <%= offset_row { f.submit class: submit_class } %>
<% end %>

