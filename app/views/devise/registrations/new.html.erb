
<%= render 'heading', title: "Sign up", prefix: '',
                      subtitle: 'for new users' %>

<% set_medium_form! %>

<% form_controls = form_atts.merge as: resource_name,
                                   url: registration_path(resource_name) %>

<%= form_for resource, form_controls do |f| %>
  <%= devise_error_messages! %>

  <%= text_field_group f, :name %>

  <%= text_field_group f, :email, type: :email, mandatory: true,
                                                autofocus: true %>

  <%= text_field_group f, :password, type: :password, mandatory: true %>

  <%= text_field_group f, :password_confirmation, type: :password,
                                                  mandatory: true %>

  <%= offset_row { submit_tag 'Sign up', class: submit_class } %>
<% end %>

<br>

<div>
  <div class="btn-group btn-group-justified"
       role="group" aria-label="reg-btns">
    <%- if devise_mapping.registerable? %>
      <%= link_up_btn :sign_in, new_user_session_path %>
    <% end -%>

    <%- if devise_mapping.recoverable? %>
      <%= link_up_btn :forgot_password, new_password_path(resource_name) %>
    <% end -%>
  </div>
</div>

