
<%= render 'heading', title: "Edit user", prefix: '',
                      subtitle: 'own details' %>

<% set_medium_form! %>

<% form_controls = form_atts.merge as: resource_name,
                                   url: registration_path(resource_name) %>

<%= form_for resource, form_controls do |f| %>
  <%= devise_error_messages! %>

  <%= text_field_group f, :name %>

  <%= text_field_group f, :email, type: :email, mandatory: true,
                                                autofocus: true %>

  <%= text_field_group f, :password, type: :password %>

  <% help = 'Leave the password blank unless you want to change it' %>
  <%= text_field_group f, :password_confirmation, type: :password,
                                                  help: help %>

  <%= text_field_group f, :current_password, type: :password,
                                             mandatory: true %>

  <%= offset_row { submit_tag 'Update', class: submit_class } %>
<% end %>

<br>

<%= render 'delete' %>

