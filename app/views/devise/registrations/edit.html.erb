
<%= render 'heading', title: "Edit user", prefix: '', subtitle: 'own details' %>

<% set_medium_form! %>

<%= form_for resource, form_atts.merge(as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= text_field_group f, :name %>

  <%= text_field_group f, :email, type: :email, mandatory: true,
                                                autofocus: true %>

  <%= text_field_group f, :password, type: :password %>

  <% help = 'Leave these passwords blank unless you want to change it' %>
  <%= text_field_group f, :password_confirmation, type: :password,
                                                  help: help %>

  <%= text_field_group f, :current_password, type: :password,
                                             mandatory: true %>

  <%= offset_row { submit_tag 'Update', class: submit_class } %>
<% end %>

<br>

<div>
    <h3 class='text-danger'>Permanently Remove my Account</h3>
    <p class='text-warning'>
      This will delete all tags and bookmarks, so use with care!
    </p>
    <%= link_up_btn :delete, registration_path(resource_name), text: "Cancel my account" %>
</div>

