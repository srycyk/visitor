
<%= render 'heading', title: "Forgotten password", prefix: '', subtitle: 'sends you reset instructions' %>

<% set_large_form! %>

<%= form_for resource, form_atts.merge(as: resource_name, url: password_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= text_field_group f, :email, type: :email, mandatory: true, autofocus: true %>

  <%= offset_row { submit_tag 'Reset password', class: submit_class } %>
<% end %>

<br>

<div>
  <div class="btn-group btn-group-justified" role="group" aria-label="reg-btns">
    <%- if devise_mapping.registerable? %>
      <%= link_up_btn :sign_in, new_user_session_path %>
    <% end -%>

    <%- if devise_mapping.registerable? %>
      <%= link_up_btn :sign_up, new_registration_path(resource_name) %>
    <% end -%>
  </div>
</div>

