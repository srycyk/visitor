
<%= render 'heading', title: "Forgotten password", prefix: '',
                      subtitle: 'to send password reset instructions' %>
 
<% set_large_form! %>

<% form_controls = form_atts.merge as: resource_name,
                                   url: password_path(resource_name),
                                   method: :put %>

<%= form_for resource, form_controls do |f| %>
  <%= devise_error_messages! %>

  <%= f.hidden_field :reset_password_token %>

  <%= text_field_group f, :password, type: :password,
                                     mandatory: true,
                                     autofocus: true %>

  <%= text_field_group f, :password_confirmation, type: :password,
                                                  mandatory: true %>

  <%= offset_row { submit_tag 'Change password', class: submit_class } %>
<% end %>

